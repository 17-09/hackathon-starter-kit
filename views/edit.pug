extends layout
block content
  .container
    .row
      .col-xl-8.offset-xl-2.py-5
        form#contact-form(method="post" action="create" role="form")
          .messages
          .controls
            .row
              .col-md-12
                .form-group
                  label(for="title") Title of your Post *
                  input#title.form-control(type="text" name="title" placeholder="Hello Haven" required="required")
                  
            .row
              .col-md-12
                .form-group
                  label(for="description") Description of your Post *
                  textarea#description.form-control(type="text" name="description" placeholder="It was a brown stylish fox that jumped over the fence of the next neighbor." required="required" )
          
              .col-md-12
                input.btn.btn-success.btn-send(type="submit" value="Create Post")